{{#*inline "page"}}
    <h1>Lecture {{{ lec_id }}} admin</h1>

    <form action="/admin/lec/edit/{{{ lec_id }}}" method="post" accept-charsets="utf-8">
      <p>
        <label>Title: <input name="lec_name" value="{{{ title }}}" />
        </label>
      </p>
      <p>
        <label>Presenters (CSV list of emails): <input name="lec_presenters" value="{{{ presenters }}}" />
      </p>

      <input type="submit" value="Update">
    </form>

    <h2>Current questions</h2>
    <ul>
      {{#each questions}}
      <li>{{{ this.question_num }}}: {{{ this.prompt }}} &ndash; <a href="/admin/lec/{{{ ../lec_id }}}/{{{ this.id }}}">edit</a>
      {{/each}}
    </ul>

    <h2>Add question</h2>
    <form action="/admin/lec/{{{ lec_id }}}" method="post" accept-charset="utf-8">
      <p>
        <label>Question prompt:<br />
        <textarea name="q_prompt" rows="10" cols="80">Ask something here.</textarea>
        </label>
      </p>

      <input type="submit" value="Add question">
    </form>
{{/inline}}
{{~> (parent)~}}
